<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_COMPANIES_FILTER_ACTIVITIES"
                description="COM_COMPANIES_FILTER_ACTIVITIES"
                hint="COM_COMPANIES_FILTER_ACTIVITIES"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="contractor"
                type="list"
                label="COM_COMPANIES_FILTER_SELECT_FOR_CONTRACTOR"
                description="COM_COMPANIES_FILTER_SELECT_FOR_CONTRACTOR"
                onchange="this.form.submit();"
        >
            <option value="">COM_COMPANIES_FILTER_SELECT_FOR_CONTRACTOR</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
        <field
                name="ndp"
                type="list"
                label="COM_COMPANIES_FILTER_SELECT_FOR_NDP"
                description="COM_COMPANIES_FILTER_SELECT_FOR_NDP"
                onchange="this.form.submit();"
        >
            <option value="">COM_COMPANIES_FILTER_SELECT_FOR_NDP</option>
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING"
                description="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="title ASC">COM_COMPANIES_SORTING_ACTIVITIES_TITLE_ASC</option>
            <option value="title DESC">COM_COMPANIES_SORTING_ACTIVITIES_TITLE_DESC</option>
            <option value="for_contractor ASC">COM_COMPANIES_SORTING_ACTIVITIES_CONTRACTOR_ASC</option>
            <option value="for_contractor DESC">COM_COMPANIES_SORTING_ACTIVITIES_CONTRACTOR_DESC</option>
            <option value="for_ndp ASC">COM_COMPANIES_SORTING_ACTIVITIES_NDP_ASC</option>
            <option value="for_ndp DESC">COM_COMPANIES_SORTING_ACTIVITIES_NDP_DESC</option>
            <option value="id ASC">COM_COMPANIES_SORTING_COMPANIES_ID_ASC</option>
            <option value="id DESC">COM_COMPANIES_SORTING_COMPANIES_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_COMPANIES_FILTER_LIMIT"
                description="COM_COMPANIES_FILTER_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>