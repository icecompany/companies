<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_COMPANIES_FILTER_COMPANIES"
                description="COM_COMPANIES_FILTER_COMPANIES"
                hint="COM_COMPANIES_FILTER_COMPANIES"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="percent"
                type="integer"
                first="1"
                last="100"
                step="1"
                default="20"
                onchange="this.form.submit()"
        >
                <option value="">COM_COMPANIES_FILTER_SELECT_PERCENT</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="hidden"
        />
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_COMPANIES_FILTER_LIMIT"
                description="COM_COMPANIES_FILTER_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>