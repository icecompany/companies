<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_COMPANIES_FILTER_COMPANIES"
                description="COM_COMPANIES_FILTER_COMPANIES"
                hint="COM_COMPANIES_FILTER_COMPANIES"
                autocomplete="off"
                class="js-stools-search-string"
        />
        <field
                name="in_project"
                type="Project"
                onchange="this.form.submit();"
                >
            <option value="">COM_COMPANIES_FILTER_SELECT_IN_PROJECT</option>
        </field>
        <field
                name="activity"
                type="Activity"
                label="COM_COMPANIES_FILTER_SELECT_ACTIVITY"
                description="COM_COMPANIES_FILTER_SELECT_ACTIVITY"
                onchange="this.form.submit();"
        >
            <option value="">COM_COMPANIES_FILTER_SELECT_ACTIVITY</option>
        </field>
        <field
                name="state"
                type="list"
                label="JSTATUS"
                description="JFIELD_PUBLISHED_DESC"
                onchange="this.form.submit();"
        >
            <option value="">COM_COMPANIES_FILTER_SELECT_STATE</option>
            <option value="-2">JTRASHED</option>
        </field>
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING"
                description="COM_COMPANIES_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title asc"
        >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="e.title ASC">COM_COMPANIES_SORTING_COMPANIES_TITLE_ASC</option>
            <option value="e.title DESC">COM_COMPANIES_SORTING_COMPANIES_TITLE_DESC</option>
            <option value="manager ASC">COM_COMPANIES_SORTING_COMPANIES_MANAGER_ASC</option>
            <option value="manager DESC">COM_COMPANIES_SORTING_COMPANIES_MANAGER_DESC</option>
            <option value="city ASC">COM_COMPANIES_SORTING_COMPANIES_CITY_ASC</option>
            <option value="city DESC">COM_COMPANIES_SORTING_COMPANIES_CITY_DESC</option>
            <option value="e.id ASC">COM_COMPANIES_SORTING_COMPANIES_ID_ASC</option>
            <option value="e.id DESC">COM_COMPANIES_SORTING_COMPANIES_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_COMPANIES_FILTER_LIMIT"
                description="COM_COMPANIES_FILTER_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>